{
  "name": "md-http-server",
  "version": "1.3.0",
  "description": "A simple HTTP server for rendering markdown files with Mermaid diagrams, Table of Contents, and Live Reload",
  "main": "dist/index.js",
  "bin": {
    "md-http-server": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "markdown",
    "server",
    "http",
    "md",
    "renderer",
    "mermaid",
    "diagrams",
    "viewer",
    "toc",
    "table-of-contents",
    "navigation",
    "live-reload",
    "watch",
    "hot-reload",
    "auto-refresh"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chunrui-qashier/md-http-server.git"
  },
  "bugs": {
    "url": "https://github.com/chunrui-qashier/md-http-server/issues"
  },
  "homepage": "https://github.com/chunrui-qashier/md-http-server#readme",
  "dependencies": {
    "chokidar": "^4.0.3",
    "commander": "^11.1.0",
    "express": "^4.18.2",
    "marked": "^11.1.0"
  },
  "devDependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
